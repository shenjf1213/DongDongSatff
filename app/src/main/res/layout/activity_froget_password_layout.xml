<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/forget_password_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/forget_password_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="@dimen/ToolBalTextSize" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_password_tool_bar"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/forget_password_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="手机号码："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/forget_password_phone_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/forget_password_code"
                android:layout_toRightOf="@+id/forget_password_phone_tv"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="phone|number"
                android:maxLength="11"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <Button
                android:id="@+id/forget_password_code"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background_shape"
                android:text="发送验证"
                android:textColor="@color/white" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/forget_password_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="验证码：    "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/forget_password_code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="90dp"
                android:layout_toEndOf="@+id/forget_password_tv_1"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:inputType="number"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/forget_password_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="新密码：    "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/forget_password_new_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="90dp"
                android:layout_toEndOf="@+id/forget_password_tv_2"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="输入新密码"
                android:inputType="numberPassword"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/forget_password_new_show"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:src="@mipmap/btn_passno" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/forget_password_tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="确认密码    "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/forget_password_confirm_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="90dp"
                android:layout_toEndOf="@+id/forget_password_tv_3"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="请再次输入新密码"
                android:inputType="numberPassword"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/forget_password_confirm_show"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:src="@mipmap/btn_passno" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/forget_password_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
