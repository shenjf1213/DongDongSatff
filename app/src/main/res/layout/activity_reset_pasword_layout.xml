<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/reset_password_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/orange"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/reset_password_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="密码设置"
                android:textColor="@color/white"
                android:textSize="@dimen/ToolBalTextSize" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reset_password_tool_bar"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/old_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="旧密码：        "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/old_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/old_password_tv"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="输入旧的登录密码"
                android:inputType="numberPassword"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/old_password_show"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/btn_passno" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/new_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="新密码：        "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/new_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/new_password_tv"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="设置新的登录密码"
                android:inputType="numberPassword"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/new_password_show"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/btn_passno" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/confirm_password_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="确认新密码："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/confirm_password_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/confirm_password_tv"
                android:background="@drawable/edit_text_background_shape"
                android:gravity="center_vertical"
                android:hint="确认新的登录密码"
                android:inputType="numberPassword"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/confirm_password_show"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/btn_passno" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_password_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/orange"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>
